#:kivy 1.0
#:import kivy kivy

<AudioBackground>:
    orientation: 'vertical'
    id: audioBackground

    # Background
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                app_icon: "gui\\logo.png"
                title: app.currentSongTitle
                with_previous: False
            ActionOverflow:

            ActionButton:
                text: 'Clear Playlist'
                icon: 'gui\\clearIcon.png'
                on_press: app.clear_playlist(root)
            ActionButton:
                text: 'Show Playlist'
                icon: 'gui\\playlist-512.png'
                on_press: app.view_playlist(root)
            ActionButton:
                text: 'Show all musics'
                icon: 'gui\\allMusics.png'
                on_press: app.view_all_songs(root)
            ActionButton:
                text: 'Change metadata info'
                icon: 'gui\\saveIcon.png'
                on_press: app.view_metadata(root)
            ActionButton:
                text: 'View all albums'
                icon: 'gui\\albumIcon.png'
                on_press: app.view_albums(root)
            ActionButton:
                text: 'View all artists'
                icon: 'gui\\artistsIcon.png'
                on_press: app.view_artists(root)
            ActionButton:
                text: 'Import musics'
                icon: 'gui\\importIcon.png'
                on_press: app.import_songs(root)

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, .95)
        pos_hint: {'top':1, 'right':1}

        # Reference for list of musics
        # AQUI Ã‰ ONDE ESTAVA O GRID LAYOUT!
        ScrollView:
            size_hint:(.45, 1)
            id: musicPanel

        Splitter:
            strip_size: '4pt'
            ScrollView:
                id: miscPanel

    BoxLayout:
        id: audioBar
        size_hint_y: .05
        pos_hint: {'y': 0}

        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'gui\\audioBar.png'
                size: self.size

        BoxLayout:
            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .02, 1
                text: "<<"
                on_press: app.previous_playlist(root)
            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .05, 1
                text: app.buttonStatus
                on_press: app.play_music(self)
            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .02, 1
                text: ">>"
                on_press: app.next_playlist(root)

            Slider:
                min: 0.0
                max: 1.0
                value: 1.0
                orientation: "horizontal"
                size_hint_x: .20
                pos_hint: {'x': 0,'y': 0}
                on_value: app.set_volume(self.value)

            Widget:
                size_hint_x: .02
                pos_hint: {'x': 0,'y': 0}

            # Music progress bar
            ProgressBar:
                size_hint_x: .5
                height: '48dp'
                min: 0.0
                max: 100.0
                value: app.progressBarPosition
                #on_value: app.move_position(self.value_normalized)

            Widget:
                size_hint_x: .03
                pos_hint: {'x': 0,'y': 0}

            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .08, 1
                text: "Shuffle"
                on_press: app.shuffle_playlist(root)
            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .08, 1
                text: app.repeatButtonStatus
                on_press: app.change_repeat_status()


<AlbumViewer>:
    cols: 3
    padding: 10
    spacing: 10
    height: self.minimum_height
    size_hint: 1, None

<ArtistViewer>:
    cols: 3
    padding: 10
    spacing: 10
    height: self.minimum_height
    size_hint: 1, None

<MusicViewer>:
    cols: 2
    padding: 5
    spacing: 5
    height: self.minimum_height
    size_hint: 1, None

<MetadataEditor>:
    orientation: 'vertical'
    pos_hint_y: {'top':1}
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
        Label:
            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Title'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: app.localSong.title
            on_text: app.change_title(self)
        Widget:
            size_hint_x:.05
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
        Label:
            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Artist'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: app.localSong.band
            on_text: app.change_artist(self)
        Widget:
            size_hint_x:.05
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
        Label:
            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Album'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: app.localSong.album
            on_text: app.change_album(self)
        Widget:
            size_hint_x:.05
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
        Label:
            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Track'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: app.localSong.track
            on_text: app.change_track(self)
        Widget:
            size_hint_x:.05
    Widget:
    Button:
        text: 'Save changes'
        size_hint: (.5, .4)
        pos_hint: {'center_x':.5}
        on_press: app.save_metadata()
    Widget:
