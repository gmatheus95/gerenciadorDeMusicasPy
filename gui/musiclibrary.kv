            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Artist'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: 'Monoline textinput'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
        Label:
            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Album'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
            height: '32dp'
            multiline: False
            text: 'Monoline textinput'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
        Label:
            size_hint_x: .25
            size_hint_y: None
            height: '32dp'
            text: 'Track'
            color: (1, 1, 1, 1)
        TextInput:
            size_hint_y: None
