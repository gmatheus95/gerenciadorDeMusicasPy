#:kivy 1.0
#:import kivy kivy

<AudioBackground>:
    orientation: 'vertical'
    id: audioBackground

    # Background
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'OLAR'
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'Btn0'
                icon: 'atlas://data/images/defaulttheme/audio-volume-high'
            ActionButton:
                text: 'Btn1'
                icon: 'gui\\saveIcon.png'
                on_press: app.view_metadata(root)
            ActionButton:
                text: 'Btn2'
                icon: 'gui\\albumIcon.png'
                on_press: app.view_albums(root)

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, .95)
        pos_hint: {'top':1, 'right':1}

        # Reference for list of musics
        BoxLayout:
            size_hint:(.45, 1)
            id: musicPanel

        Splitter:
            strip_size: '4pt'
            ScrollView:
                id: miscPanel

    BoxLayout:
        id: audioBar
        size_hint_y: .05
        pos_hint: {'y': 0}

        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'gui\\audioBar.png'
                size: self.size

        BoxLayout:
            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .05, 1
                text: 'Play'
                on_press: app.play_music()

            Slider:
                min: 0.0
                max: 1.0
                value: 1.0
                orientation: "horizontal"
                size_hint_x: .25
                pos_hint: {'x': 0,'y': 0}
                on_value: app.set_volume(self.value)

            # TODO: rethink progress bar
            ProgressBar:
                id: pb
                size_hint_x: .50
                height: '48dp'
                value: 75

            Label:
                size_hint_x: .25
                text: 'Musica legal'
                color: (0, 0, 0, 1)

<AlbumViewer>:
    id: albumsPosition
    cols: 3
    padding: 10
    spacing: 10
    height: self.minimum_height
    size_hint: None, None

<MetadataEditor>:
    orientation: 'vertical'
    pos_hint_y: {'top':1}
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '32dp'
