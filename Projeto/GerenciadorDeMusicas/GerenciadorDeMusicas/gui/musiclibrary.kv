#:kivy 1.0
#:import kivy kivy

<AudioBackground>:
    orientation: 'vertical'
    id: audioBackground

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, .95)
        pos_hint: {'top':1, 'right':1}


        BoxLayout:
            size_hint:(.45, 1)
            id: musicPanel

        Splitter:
            strip_size: '4pt'
            ScrollView:
                GridLayout:
                    cols: 3
                    padding: 10
                    spacing: 10
                    height: self.minimum_height
                    size_hint: None, None
                    Button:
                        text: "Album 1"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 2"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 3"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 4"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 5"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 6"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 7"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 8"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 9"
                        size_hint: None, None
                        size: 200, 200
                    Button:
                        text: "Album 10"
                        size_hint: None, None
                        size: 200, 200


    BoxLayout:
        id: audioBar
        size_hint_y: .05
        pos_hint: {'y': 0}

        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'audioBar.png'
                size: self.size

        BoxLayout:
            Button:
                pos_hint: {'x': 0,'y': 0}
                size_hint: .05, 1
                text: 'Play'

            Slider:
                min: 0.0
                max: 1.0
                value: 1.0
                orientation: "horizontal"
                size_hint_x: .25
                pos_hint: {'x': 0,'y': 0}

            # TODO: rethink progress bar
            ProgressBar:
                id: pb
                size_hint_x: .50
                height: '48dp'
                value: 75

            Label:
                size_hint_x: .25
                text: 'Musica legal'
                color: (0, 0, 0, 1)

<AudioButton>:
    size_hint: None,0.333
    width: self.height
    text_size: self.size
    font_size: '12sp'
    valign: 'middle'
